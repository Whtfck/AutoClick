<Window x:Class="AutoClick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AutoClick" Height="400" Width="600" ResizeMode="NoResize" HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center" WindowStartupLocation="CenterScreen">

    <StackPanel ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="10,10,10,10">
        <StackPanel Height="30" Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    HorizontalAlignment="Right">
            <Label x:Name="PidLabel" Content="Process:" Width="60" VerticalAlignment="Center" Height="30"
                   VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
            <TextBox x:Name="PidTextBox" IsEnabled="False" TextWrapping="Wrap" Text="" VerticalAlignment="Center"
                     VerticalContentAlignment="Center" Height="30" Width="440" />
            <Button x:Name="PidBtn" Content="Select" Width="60" Margin="10,0,0,0" Height="30"
                    Click="PidBtn_OnClick" />
        </StackPanel>
        <StackPanel Height="30" Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    Margin="0,10,0,0" HorizontalAlignment="Right">
            <Label x:Name="ConfigLabel" Content="Config:" Width="60" VerticalAlignment="Center" Height="30"
                   VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
            <TextBox x:Name="ConfigTextBox" TextWrapping="Wrap" Text="" VerticalAlignment="Center"
                     VerticalContentAlignment="Center" Height="30" Width="440" />
            <Button x:Name="ConfigBtn" Content="Select" Width="60" Margin="10,0,0,0" Height="30"
                    Click="ConfigBtn_OnClick" />
        </StackPanel>
        <StackPanel Height="30" Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    Margin="0,10,0,0" HorizontalAlignment="Right">
            <CheckBox x:Name="IsRunningCheckBox" VerticalAlignment="Center" IsChecked="False"
                      Content="isRunning"
                      Margin="0,0,10,0" IsEnabled="False" />
            <Button x:Name="StartBtn" Content="Start" Width="60" Height="30" Click="StartBtn_OnClick" Margin="0,0,10,0" />
            <Button x:Name="StopBtn" Content="Stop" Width="60" Height="30" Click="StopBtn_OnClick" />
        </StackPanel>
    </StackPanel>
</Window>